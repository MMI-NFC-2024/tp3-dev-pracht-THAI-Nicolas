---
import Layout from "../layouts/Layout.astro"
import RetourAccueil from "../components/RetourAccueil.astro"
---
<Layout>
<RetourAccueil />

<h1 class="text-2xl pt-10 pb-10 text-center">Méthode 2 : Page avec IFRAME pour naviguer entre les graphiques sans rafraîchir la page</h1>
<div class="container mx-auto p-6">
    <nav aria-label="Navigation des espèces de pingouins" class="max-w-md mx-auto p-6 mb-6">
        <ul class="list-none">
            <li>
                <label for="species" class="block text-sm font-medium text-gray-700 mb-2">Espèce de pingouin :</label>
                <select id="species" class="w-full px-4 py-3 text-base border-2 border-gray-300 rounded-lg shadow-sm bg-white hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 cursor-pointer">
                    <option value="" disabled>Choisissez une espèce...</option>
                    <option value="Adelie" selected>Pingouin Adelie</option>
                    <option value="Chinstrap">Pingouin Chinstrap</option>
                    <option value="Gentoo">Pingouin Gentoo</option>
                </select>
            </li>
        </ul>
    </nav>

    <iframe 
        name="species-frame"
        src="/species/Adelie"
        class="w-full border border-gray-300 rounded"
        style="height: 65vh; min-height: 500px;">
    </iframe>

</div>

<script>
document.querySelector("#species")?.addEventListener("change", (evt) => {
    const value = (evt.target as HTMLSelectElement).value;
    if (value) {
        const iframe = document.querySelector('iframe[name="species-frame"]') as HTMLIFrameElement;
        if (iframe) {
            iframe.src = "/species/" + value;
        }
    }
});
</script>

</Layout>
