---
import PlotFigure from "../components/PlotFigure.astro";
import Layout from "../layouts/Layout.astro";
import * as Plot from "@observablehq/plot";
import penguins from "../assets/penguins.json";
import MenuPrincipal from "../components/MenuPrincipal.astro";
---

<Layout>
  <MenuPrincipal />
  
  <div class="max-w-4xl mx-auto px-6 py-12">
    
    <header class="text-center mb-12">
      <h1 class="text-3xl font-light text-black mb-4">
        TP3 - Analyse des Pingouins
      </h1>
      <p class="text-black text-xl font-light">
        Exploration des donn√©es morphologiques de {penguins.length} pingouins
      </p>
    </header>

    <div class="bg-white border border-gray-200 rounded p-6 mb-12">
      <PlotFigure
        options={{
          marks: [
            Plot.dot(penguins, {
              x: "culmen_length_mm",
              y: "culmen_depth_mm",
              stroke: "species",
            }),
          ],
        }}
      />
      <p class="text-sm text-black text-center mt-4">
        Longueur du bec (mm) vs Profondeur du bec (mm)
      </p>
    </div>

  </div>
</Layout>
